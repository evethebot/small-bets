# ============================================
# {{PRODUCT_NAME}} - Environment Variables
# ============================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control

# ---- App ----
NEXT_PUBLIC_APP_NAME="{{PRODUCT_NAME}}"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_DESCRIPTION="{{PRODUCT_DESC}}"

# ---- Auth (NextAuth.js v5) ----
AUTH_SECRET="generate-with-npx-auth-secret"
# Google OAuth (optional)
AUTH_GOOGLE_ID=""
AUTH_GOOGLE_SECRET=""
# GitHub OAuth (optional)
AUTH_GITHUB_ID=""
AUTH_GITHUB_SECRET=""

# ---- Supabase ----
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"
# Direct connection string (for migrations)
DATABASE_URL="postgresql://postgres:password@db.your-project.supabase.co:5432/postgres"

# ---- Stripe ----
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."
# Stripe Price IDs
STRIPE_PRICE_MONTHLY="price_..."
STRIPE_PRICE_YEARLY="price_..."
STRIPE_PRICE_LIFETIME="price_..."

# ---- Analytics (choose one) ----
# Plausible
NEXT_PUBLIC_PLAUSIBLE_DOMAIN="{{PRODUCT_DOMAIN}}"
# OR Umami
NEXT_PUBLIC_UMAMI_WEBSITE_ID=""
NEXT_PUBLIC_UMAMI_URL=""

# ---- Email (optional) ----
RESEND_API_KEY=""
EMAIL_FROM="noreply@{{PRODUCT_DOMAIN}}"

# ---- Feature Flags ----
NEXT_PUBLIC_ENABLE_ANALYTICS="false"
NEXT_PUBLIC_ENABLE_I18N="true"
